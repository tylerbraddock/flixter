<div class="booyah-box col-10 offset-1 border-top crs-index">
  <h1 class="text-center">Start Training Today</h1>

  <% @courses.each do |course| %>
    <h3 class="text-center"><%= link_to course.title, course_path(course) %></h3>
    <div class="text-center">
      <%= image_tag course.image, class: 'img-fluid' %>
    </div>
    <br />
    <div class="row">
      <div class="col-sm-8 col-12 descript">
        <%= course.description %>
      </div>
      <div class="col-sm-4 col-12 text-center">
        <%= link_to 'More Details...', course_path(course), class: 'btn btn-success' %>
      </div>
    </div>
    <hr />
    <br class="clr" />
  <% end %>
</div>
