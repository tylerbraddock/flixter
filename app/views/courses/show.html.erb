<div class="booyah-box col-10 offset-1 booyah-top crs-page">
  <h1><%= @course.title %></h1>
  <div class="text-center">
    <%= image_tag @course.image, class: 'img-fluid' %>
  </div>
  <br />
  <div class="row">
    <div class="col-sm-4 col-12 text-center">
      <span class="badge badge-default">
        <%= number_to_currency @course.cost %>
      </span>

      <% if current_user && current_user == @course.user %>
        <br />
        <br />

        <%= link_to 'Administer', instructor_course_path(@course), class: 'btn btn-success' %>
      <% end %>

      <br />
      <br />

      <% if current_user %>
        <% if current_user.enrolled_in?(@course) %>
          <h4 class="badge badge-info">You're Enrolled!</h4>
        <% else %>
          <% if @course.free? %>
            <%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn-success enroll-btn', method: :post %>
          <% else %>
            <%= form_tag course_enrollments_path(@course) do %>
              <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                      data-email="<%=current_user.email %>"
                      data-description="<%= @course.title %>(<%= number_to_currency @course.cost %>)"
                      data-amount="<%= (@course.cost * 100).to_i %>"
                      data-locale="auto"></script>
            <% end %>
          <% end %>
        <% end %>
      <% else %>
        <h4 class="badge badge-info">Sign In to Enroll!</h4>
      <% end %>
    </div>

    <div class="col-sm-8 col-12 crs-description">
      <%= @course.description %>
    </div>
  </div>

  <hr />

  <div class="col-12">
    <% @course.sections.rank(:row_order).each do |section| %>
      <br /><br />
      <div class="section">
        <h3><%= section.title %></h3>
        <div class="row">
          <% section.lessons.rank(:row_order).each do |lesson| %>
            <div class="col-12 col-sm-6">
              <div class="lesson text-center gradient">
                <%= link_to lesson_path(lesson) do %>
                  <b><%= lesson.title %></b>
                  <p><%= lesson.subtitle %></p>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <br class="clr" />
      </div>
    <% end %>
  </div>
</div>
