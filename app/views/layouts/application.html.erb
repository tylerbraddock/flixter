<!DOCTYPE html>
<html>
  <head>
    <title>gymBasic</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://vjs.zencdn.net/5.17.0/video-js.css" rel="stylesheet">

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  </head>

  <body>

    <div id="flex-content-container">
      <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <%= link_to 'gymBasic', root_path, class: 'navbar-brand' %>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav mr-auto mt-2 mt-md-0">
            <li class="nav-item">
              <%= link_to 'See All Courses', courses_path, class: 'nav-link' %>
            </li>
          </ul>
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>

      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <%= yield %>
    </div>

    <div id="footer">
      <div class="container">
        <div class="row">
          <div class="col-12 col-sm-3">
            <b>Teachers</b>
            <ul>
              <li><%= link_to 'Teach a Course', new_instructor_course_path %></li>
              <li><%= link_to 'My Dashboard', dashboard_path %></li>
            </ul>
          </div>
          <div class="col-12 col-sm-3">
            <b>About</b>
            <ul>
              <li><%= link_to 'Team', team_path %></li>
              <li><%= link_to 'Careers', careers_path %></li>
              <li><%= link_to 'Privacy Policy', privacy_path %></li>
            </ul>
          </div>
          <div class="col-12 col-sm-3">
            <b>Contact</b>
            <ul>
              <li>fpdapps@gmail.com</li>
            </ul>
          </div>
          <div class="col-12 col-sm-3">
            <b>Social</b>
            <ul>
              <li>
                <%= link_to 'https://github.com/tylerbraddock' do %>
                  <i class="fa fa-github-square fa-2x social-button" aria-hidden="true"></i>
                <% end %>
                <%= link_to 'https://www.facebook.com/tyler.braddock.90' do %>
                  <i class="fa fa-facebook-square fa-2x social-button" aria-hidden="true"></i>
                <% end %>
                <%= link_to 'https://twitter.com/tylerbraddock01' do %>
                  <i class="fa fa-twitter-square fa-2x social-button" aria-hidden="true"></i>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>




    </div>

    <script src="https://vjs.zencdn.net/5.17.0/video.js"></script>
    <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>

  </body>
</html>
